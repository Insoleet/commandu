doctype html
html(ng-app="commanduApp")
  head
    title= title
    link(rel='stylesheet', href='http://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/app.css')
  body
    include navigation
    #index-banner.section.no-pad-bot
      .container
        if success
          include include/success
        if error
          include include/error
        if notice
          include include/notice
        block content
      .section
    footer.page-footer.orange
      .container
      .footer-copyright
        .container
          | Made by
          a.orange-text.text-lighten-3(href='http://materializecss.com') Materialize
    script(src='/js/templates.js')
    script(src='/js/libraries.js')
    script(src='/js/app.js')
    script require('application').init();